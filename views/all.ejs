<%- include("partials/header"); %>
  <div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <!-- <th scope="col" class="ink">Add to Calendar</th> -->
          <th scope="col" class="ink">Sr. No.</th>
          <th scope="col" class="ink">Contest Name</th>
          <th scope="col" class="ink">Start Time</th>
          <th scope="col" class="ink">Duration</th>
          <th scope="col" class="ink">Site</th>
          <th scope="col" class="ink">Contest Link</th>
        </tr>
      </thead>
      <% var count=1; %>
        <% for (var i=0; i <articles.length; i++ ) { %>

          <% if(articles[i].duration<=180000){ %>
            <tr>
              <td scope="row" style="color:black">
                <%= count++ %>
              </td>
              <td style="color:yellow">
                <%= articles[i].name %>
              </td>
              <td style="color:blue">
                <%= new
                  Date(articles[i].start_time).toLocaleString(undefined,{dateStyle:"medium",timezone:"Asia/Kolkata",timeStyle:"short"})
                  %>
              </td>
              <td style="color:rgb(86, 221, 86)">
                <% if((articles[i].duration)/3600>=24){ %>
                  <%= articles[i].duration/(3600*24) %> days
                    <% }else{ %>
                      <%= Math.floor(articles[i].duration /3600) %>
                        <%if(articles[i].duration /3600<2){ %> hr
                          <% }else{ %> hrs
                            <% } %>
                              <% if(articles[i].duration%3600!=0){ %>
                                <%= (articles[i].duration%3600)/60 %> mins
                                  <% }} %>
              </td>
              <td>
                <%=articles[i].site %>
              </td>
              <td>
                <% if(articles[i].status=="CODING" ){ %>
                  <center><button onclick="location.href = '<%= articles[i].url %>';" type="submit"
                      class="btn btn-outline-dark d-btn" style="font-weight:bold;color: white;">Participate Now</button>
                  </center>
              </td>
              <%} else{%>
                <center> <button onclick="location.href = '<%= articles[i].url %>';" type="submit"
                    class="btn btn-outline-dark d-btn btn-block"
                    style="font-weight:bold;color: rgb(255, 255, 255);;">Visit Now</button></center>
                </td>
                <%}%>
                  </td>
            </tr>
            <% } %>
              <% } %>

    </table>


  </div>
  <%- include("partials/footer"); %>